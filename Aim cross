-- Services
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")

local player = Players.LocalPlayer
local camera = workspace.CurrentCamera

-- Smoothness (lower = smoother, higher = faster)
local SMOOTHNESS = 0.08

-- UI
local gui = Instance.new("ScreenGui")
gui.Name = "SmoothLockUI"
gui.Parent = player:WaitForChild("PlayerGui")

local button = Instance.new("TextButton")
button.Size = UDim2.new(0, 210, 0, 50)
button.Position = UDim2.new(0.05, 0, 0.45, 0)
button.Text = "Tracking: OFF"
button.BackgroundColor3 = Color3.fromRGB(200, 60, 60)
button.TextColor3 = Color3.fromRGB(255, 255, 255)
button.Font = Enum.Font.SourceSansBold
button.TextSize = 18
button.Parent = gui

-- Draggable button
local dragging = false
local dragStart, startPos

button.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 then
		dragging = true
		dragStart = input.Position
		startPos = button.Position
	end
end)

button.InputEnded:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 then
		dragging = false
	end
end)

UserInputService.InputChanged:Connect(function(input)
	if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
		local delta = input.Position - dragStart
		button.Position = UDim2.new(
			startPos.X.Scale,
			startPos.X.Offset + delta.X,
			startPos.Y.Scale,
			startPos.Y.Offset + delta.Y
		)
	end
end)

-- Tracking logic
local tracking = false
local lockedTarget = nil
local connection
local normalCameraType = camera.CameraType

local function getNearestOtherPlayer()
	local char = player.Character
	if not char or not char:FindFirstChild("HumanoidRootPart") then
		return nil
	end

	local myPos = char.HumanoidRootPart.Position
	local nearest, shortest = nil, math.huge

	for _, plr in pairs(Players:GetPlayers()) do
		if plr ~= player then
			local c = plr.Character
			if c and c:FindFirstChild("HumanoidRootPart") then
				local dist = (c.HumanoidRootPart.Position - myPos).Magnitude
				if dist < shortest then
					shortest = dist
					nearest = c.HumanoidRootPart
				end
			end
		end
	end

	return nearest
end

-- Toggle button
button.MouseButton1Click:Connect(function()
	tracking = not tracking

	if tracking then
		lockedTarget = getNearestOtherPlayer()

		if not lockedTarget then
			button.Text = "No player found"
			tracking = false
			return
		end

		button.Text = "Tracking: ON"
		button.BackgroundColor3 = Color3.fromRGB(60, 200, 60)

		camera.CameraType = Enum.CameraType.Scriptable

		connection = RunService.RenderStepped:Connect(function()
			if lockedTarget and lockedTarget.Parent then
				local camPos = camera.CFrame.Position
				local targetPos = lockedTarget.Position

				local desiredCFrame = CFrame.new(camPos, targetPos)
				camera.CFrame = camera.CFrame:Lerp(desiredCFrame, SMOOTHNESS)
			end
		end)
	else
		button.Text = "no no"
		button.BackgroundColor3 = Color3.fromRGB(200, 60, 60)

		lockedTarget = nil

		if connection then
			connection:Disconnect()
			connection = nil
		end

		camera.CameraType = normalCameraType
	end
end)
