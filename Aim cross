-- Services
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")
local Workspace = game:GetService("Workspace")

local player = Players.LocalPlayer
local camera = Workspace.CurrentCamera

-- Smoothness
local SMOOTHNESS = 0.08

-- UI
local gui = Instance.new("ScreenGui")
gui.Name = "LOSLockUI"
gui.Parent = player:WaitForChild("PlayerGui")

local button = Instance.new("TextButton")
button.Size = UDim2.new(0, 220, 0, 50)
button.Position = UDim2.new(0.05, 0, 0.45, 0)
button.Text = "Tracking: OFF"
button.BackgroundColor3 = Color3.fromRGB(200, 60, 60)
button.TextColor3 = Color3.fromRGB(255, 255, 255)
button.Font = Enum.Font.SourceSansBold
button.TextSize = 18
button.Parent = gui

-- Draggable button
local dragging = false
local dragStart, startPos

button.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 then
		dragging = true
		dragStart = input.Position
		startPos = button.Position
	end
end)

button.InputEnded:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 then
		dragging = false
	end
end)

UserInputService.InputChanged:Connect(function(input)
	if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
		local delta = input.Position - dragStart
		button.Position = UDim2.new(
			startPos.X.Scale,
			startPos.X.Offset + delta.X,
			startPos.Y.Scale,
			startPos.Y.Offset + delta.Y
		)
	end
end)

-- Line of sight check
local function hasLineOfSight(targetRoot)
	local myChar = player.Character
	if not myChar or not myChar:FindFirstChild("HumanoidRootPart") then
		return false
	end

	local origin = myChar.HumanoidRootPart.Position
	local direction = targetRoot.Position - origin

	local params = RaycastParams.new()
	params.FilterType = Enum.RaycastFilterType.Blacklist
	params.FilterDescendantsInstances = {myChar, targetRoot.Parent}
	params.IgnoreWater = true

	local result = Workspace:Raycast(origin, direction, params)

	-- If ray hits nothing, or directly hits the target, LOS is clear
	return result == nil
end

-- Find nearest visible player
local function getNearestVisiblePlayer()
	local myChar = player.Character
	if not myChar or not myChar:FindFirstChild("HumanoidRootPart") then
		return nil
	end

	local myPos = myChar.HumanoidRootPart.Position
	local closest, shortest = nil, math.huge

	for _, plr in pairs(Players:GetPlayers()) do
		if plr ~= player then
			local char = plr.Character
			if char and char:FindFirstChild("HumanoidRootPart") then
				local root = char.HumanoidRootPart
				local dist = (root.Position - myPos).Magnitude

				if dist < shortest and hasLineOfSight(root) then
					shortest = dist
					closest = root
				end
			end
		end
	end

	return closest
end

-- Tracking
local tracking = false
local lockedTarget = nil
local connection
local normalCameraType = camera.CameraType

button.MouseButton1Click:Connect(function()
	tracking = not tracking

	if tracking then
		lockedTarget = getNearestVisiblePlayer()

		if not lockedTarget then
			button.Text = "No visible player"
			tracking = false
			return
		end

		button.Text = "Tracking: ON"
		button.BackgroundColor3 = Color3.fromRGB(60, 200, 60)
		camera.CameraType = Enum.CameraType.Scriptable

		connection = RunService.RenderStepped:Connect(function()
			if lockedTarget and lockedTarget.Parent then
				-- Stop tracking if object blocks view
				if not hasLineOfSight(lockedTarget) then
					return
				end

				local camPos = camera.CFrame.Position
				local desired = CFrame.new(camPos, lockedTarget.Position)
				camera.CFrame = camera.CFrame:Lerp(desired, SMOOTHNESS)
			end
		end)
	else
		button.Text = "no no"
		button.BackgroundColor3 = Color3.fromRGB(200, 60, 60)
		lockedTarget = nil

		if connection then
			connection:Disconnect()
			connection = nil
		end

		camera.CameraType = normalCameraType
	end
end)
